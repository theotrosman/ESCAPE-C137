@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Room 9 - Dimension Dash</title>
    <style>
        body,html {
            margin:0;
            padding:0;
            overflow:hidden;
            background:black;
            color:#00ffcc;
            font-family: 'Courier New', monospace;
        }
        #hud {
            position:fixed;
            top:10px;
            left:10px;
            z-index:100;
            background:rgba(0,0,0,0.6);
            padding:10px 20px;
            border:2px solid #00ffcc;
            font-size:1.2em;
        }
        #instructions {
            position:fixed;
            top:50%;
            left:50%;
            transform:translate(-50%,-50%);
            text-align:center;
            font-size:1.4em;
        }
        #pcgif {
            position:fixed;
            bottom:10px;
            right:10px;
            width:120px;
            opacity:0.7;
            z-index:99;
        }
    </style>
</head>
<body>
    <div id="hud">SCORE: <span id="score">0</span></div>
    <div id="instructions">Presiona ESPACIO para iniciar.<br>Usa ←→ para moverte, ESPACIO para saltar y recoge los anillos.</div>
    <img id="pcgif" src="/img/gifcomputadora.gif" alt="pc">
    <script type="module">
        import { init } from '/js/runner.js';
        document.addEventListener('DOMContentLoaded', () => {
            init();
        });
        document.addEventListener('keydown', () => {
            document.getElementById('instructions').style.display = 'none';
        }, { once: true });
    </script>
</body>
</html>
