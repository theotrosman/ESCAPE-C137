@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>:3</title>
    <link href="https://fonts.googleapis.com/css2?family=VT323&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg: #000810;
            --fg: #0f0;
            --cyan: #00ffff;
            --magenta: #ff00ff;
            --yellow: #ffff00;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: var(--bg);
            color: var(--fg);
            font-family: 'VT323', monospace;
            min-height: 100vh;
            overflow-x: hidden;
            position: relative;
        }

        /* Glitch Background Effect */
        .glitch-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background: linear-gradient(45deg, 
                rgba(0,0,0,0.9),
                rgba(0,20,40,0.9)
            );
            z-index: -1;
            animation: bgShift 20s infinite;
        }

        .glitch-bg::before {
            content: '';
            position: absolute;
            inset: 0;
            background: repeating-linear-gradient(
                90deg,
                transparent 0%,
                rgba(0,255,0,0.1) 1%,
                transparent 2%
            );
            animation: scanlines 2s linear infinite;
            pointer-events: none;
        }

        @@keyframes bgShift {
            0%, 100% { filter: hue-rotate(0deg); }
            50% { filter: hue-rotate(180deg); }
        }

        @@keyframes scanlines {
            0% { transform: translateY(0); }
            100% { transform: translateY(100vh); }
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 60px 20px;
            position: relative;
            z-index: 1;
        }

        .header {
            text-align: center;
            margin-bottom: 80px;
            position: relative;
        }

        .title {
            font-size: 48px;
            color: var(--cyan);
            text-shadow: 
                0 0 10px var(--cyan),
                2px 0 var(--magenta),
                -2px 0 var(--yellow);
            margin-bottom: 20px;
            animation: titleGlitch 0.3s infinite alternate;
            text-align: center;
            margin-top: 40px;
        }

        @@keyframes titleGlitch {
            0% { 
                text-shadow: 2px 0 var(--magenta), -2px 0 var(--cyan);
                transform: translate(0);
            }
            100% { 
                text-shadow: -2px 0 var(--magenta), 2px 0 var(--cyan);
                transform: translate(2px, -2px);
            }
        }

        .team-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 40px;
            padding: 20px;
            margin-top: 40px;
        }

        .team-member {
            position: relative;
            background: rgba(0,0,0,0.7);
            border: 2px solid var(--cyan);
            border-radius: 15px;
            padding: 30px;
            text-align: center;
            transition: all 0.3s ease;
            overflow: hidden;
        }

        .team-member::before {
            content: '';
            position: absolute;
            inset: -2px;
            background: linear-gradient(45deg, 
                var(--cyan),
                var(--magenta),
                var(--yellow),
                var(--cyan)
            );
            z-index: -1;
            opacity: 0;
            transition: opacity 0.3s;
            animation: borderGlow 3s linear infinite;
        }

        .team-member:hover::before {
            opacity: 1;
        }

        @@keyframes borderGlow {
            0% { filter: hue-rotate(0deg); }
            100% { filter: hue-rotate(360deg); }
        }

        .member-photo {
            width: 200px;
            height: 200px;
            border-radius: 50%;
            margin: 0 auto 20px;
            border: 3px solid var(--cyan);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .member-photo img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .team-member:hover .member-photo {
            transform: scale(1.1);
            box-shadow: 
                0 0 20px var(--cyan),
                0 0 40px var(--magenta);
        }

        .team-member:hover .member-photo img {
            transform: scale(1.1);
        }

        .member-name {
            font-size: 30px;
            color: var(--cyan);
            margin-bottom: 10px;
            position: relative;
        }

        .member-role {
            font-size: 25px;
            color: var(--magenta);
            margin-bottom: 15px;
            opacity: 0.8;
        }

        .member-desc {
            font-size: 23px;
            line-height: 1.4;
            color: var(--fg);
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.3s ease;
        }

        .team-member:hover .member-desc {
            opacity: 1;
            transform: translateY(0);
        }

        .return-button {
            position: fixed;
            top: 20px;
            left: 20px;
            padding: 10px 20px;
            background: transparent;
            border: 2px solid var(--cyan);
            color: var(--cyan);
            font-family: 'VT323', monospace;
            font-size: 20px;
            cursor: pointer;
            transition: all 0.3s ease;
            z-index: 10;
            text-decoration: none;
        }

        .return-button:hover {
            background: var(--cyan);
            color: var(--bg);
            box-shadow: 0 0 20px var(--cyan);
        }

        /* Quantum particles effect */
        .quantum-particle {
            position: fixed;
            width: 4px;
            height: 4px;
            background: var(--cyan);
            border-radius: 50%;
            pointer-events: none;
            opacity: 0;
            animation: particleFloat 3s ease-out forwards;
        }

        @@keyframes particleFloat {
            0% {
                opacity: 1;
                transform: translate(0, 0) scale(1);
            }
            100% {
                opacity: 0;
                transform: translate(
                    calc(var(--x) * 100px),
                    calc(var(--y) * 100px)
                ) scale(0);
            }
        }
    </style>
</head>
<body>
    <div class="glitch-bg"></div>
<a href="#" class="return-button" onclick="volverSinIntro(event)">VOLVER AL INICIO</a>
<script>
function volverSinIntro(e) {
            e.preventDefault();
            localStorage.setItem('skipIntro', '1');
            window.location.href = "/Home/Index";
        }
</script>

    <h1 class="title">[EQUIPO C-137]</h1>

    <div class="team-grid">
        <div class="team-member">
            <div class="member-photo">
                <img src="/img/member1.jpg" alt="Desarrollador 1">
            </div>
            <h2 class="member-name">Theo Trosman</h2>
            <div class="member-role">Científico Loco Principal</div>
            <p class="member-desc">Creador del portal interdimensional y experto en caos cuántico. </p>
                        <p class="member-desc">"No hay mal que por bien no venga"</p>

        </div>

        <div class="team-member">
            <div class="member-photo">
                <img src="/img/member3.jpg" alt="Desarrollador 2">
            </div>
            <h2 class="member-name">Sebastian Calviño</h2>
            <div class="member-role">Asistente Involuntario</div>
            <p class="member-desc">Especialista en pánico y situaciones de alto estrés.</p>
                                    <p class="member-desc">"El tiempo todo lo da y todo lo quita"</p>

        </div>

        <div class="team-member">
            <div class="member-photo">
                <img src="/img/member2.jpg" alt="Desarrollador 3">
            </div>
            <h2 class="member-name">Joaco Stock</h2>
            <div class="member-role">Especialista en Caos Social</div>
            <p class="member-desc">Experto en manejo de crisis existenciales y redes sociales interdimensionales.</p>
                                    <p class="member-desc">"Un amigo sin igual."</p>

        </div>
    </div>

    <script>
        // Quantum particle effect
        document.addEventListener('mousemove', (e) => {
            if (Math.random() < 0.1) {
                const particle = document.createElement('div');
                particle.className = 'quantum-particle';
                particle.style.left = e.clientX + 'px';
                particle.style.top = e.clientY + 'px';
                
                const angle = Math.random() * Math.PI * 2;
                particle.style.setProperty('--x', Math.cos(angle));
                particle.style.setProperty('--y', Math.sin(angle));
                
                document.body.appendChild(particle);
                
                setTimeout(() => {
                    particle.remove();
                }, 3000);
            }
        });

        // Create random particles
        setInterval(() => {
            const particle = document.createElement('div');
            particle.className = 'quantum-particle';
            particle.style.left = Math.random() * window.innerWidth + 'px';
            particle.style.top = Math.random() * window.innerHeight + 'px';
            
            const angle = Math.random() * Math.PI * 2;
            particle.style.setProperty('--x', Math.cos(angle));
            particle.style.setProperty('--y', Math.sin(angle));
            
            document.body.appendChild(particle);
            
            setTimeout(() => {
                particle.remove();
            }, 3000);
        }, 200);
        
    </script>
</body>
</html> 
