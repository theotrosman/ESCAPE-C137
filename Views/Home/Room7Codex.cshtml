    .carta:nth-child(16)::before {
      background: 
        linear-gradient(45deg, transparent 40%, rgba(255, 0, 255, 0.5) 45%, transparent 50%),
        linear-gradient(-45deg, transparent 40%, rgba(0, 255, 255, 0.5) 45%, transparent 50%);
