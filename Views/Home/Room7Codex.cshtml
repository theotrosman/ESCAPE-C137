function checkMatch() {
    const [card1, card2] = selectedCards;
    const match = card1.dataset.value === card2.dataset.value;

    if (match) {
        selectedCards.forEach(card => {
            card.classList.add('matched');
            // Create success particles
            for (let i = 0; i < 20; i++) {
                createQuantumParticle(
                    card.offsetLeft + card.offsetWidth / 2,
                    card.offsetTop + card.offsetHeight / 2
                );
            }
        });
        matchedPairs++;

        if (matchedPairs === 8) { // If all pairs are matched
            setTimeout(showVictorySequence, 1000);
        }
    } else {
        selectedCards.forEach(card => {
            card.classList.add('mismatched');
            setTimeout(() => {
                card.classList.remove('mismatched', 'flipped');
            }, 1000);
        });
    }

    setTimeout(() => {
        selectedCards = [];
        canFlip = true;
    }, 1000);
}

