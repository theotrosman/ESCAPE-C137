  setTimeout(() => document.body.classList.remove('reality-break'), 225);
  
  cartas.forEach(c => c.flip(true));
  
  if (dinero === 0) {
    log("[ALL-IN] ¡Última oportunidad! La realidad pende de un hilo...", 'warning');
  } else {
  log(`[APUESTA] $${cantidad} en juego. Mezclando realidades...`, 'warning');
  }
  
  showMemoryEchoes();
  
  setTimeout(() => {
    mezclar();
  }, 450);
}

function mezclar() {
  if (estado !== "mezclando") return;
  
  let count = 0;
  const numMezclas = 12;
  
  function hacerMezcla() {
    if (count >= numMezclas) {
      cartas.forEach(c => c.flip(false)); // Voltear todas las cartas boca abajo
      estado = "esperandoClick";
      return;
    }
    
    const delay = 150;
    
    for (let k = 0; k < 2; k++) {
      let i = Math.floor(random(NUM_CARTAS));
      let j = Math.floor(random(NUM_CARTAS));
      if (i === j) continue;
      
      let tempTx = cartas[i].tx;
      cartas[i].tx = cartas[j].tx;
      cartas[j].tx = tempTx;
      
      // Intercambiar las cartas en el array también
      [cartas[i], cartas[j]] = [cartas[j], cartas[i]];
      
      cartas[i].scale = 1.3;
      cartas[j].scale = 1.3;
      cartas[i].rotation = random(-PI/4, PI/4);
      cartas[j].rotation = random(-PI/4, PI/4);
      
      // Efecto de destello
      const flash = document.createElement('div');
      flash.style.cssText = `
        position: fixed;
        left: ${mouseX}px;
        top: ${mouseY}px;
        width: 100px;
        height: 100px;
        background: radial-gradient(circle, rgba(0,255,0,0.5) 0%, transparent 70%);
        pointer-events: none;
        z-index: 1000;
        transform: translate(-50%, -50%);
      `;
      document.body.appendChild(flash);
      setTimeout(() => flash.remove(), delay/2);
      
      setTimeout(() => {
        cartas[i].scale = 1;
        cartas[j].scale = 1;
        cartas[i].rotation = 0;
        cartas[j].rotation = 0;
      }, delay/2);
    }
    
    // Efecto de distorsión de realidad
    document.body.classList.add('reality-break');
    setTimeout(() => document.body.classList.remove('reality-break'), delay/4);
    
    count++;
    setTimeout(hacerMezcla, delay);
  }
  
  hacerMezcla();
}

function mousePressed() {
  if (estado !== "esperandoClick") return;
  for (let i = 0; i < cartas.length; i++) {
    if (cartas[i].contiene(mouseX, mouseY) && !cartas[i].volteada) {
      estado = "revelando";
      cartas[i].flip(true); // Initial flip when clicked
      setTimeout(() => {
        if (cartas[i].rara) {
          efectoCartaRara();
        }
        if (cartas[i].correcta) {
          combo++;
          aciertos++;
          let multiplicador = 2 + (combo * 0.5);
          let ganancia = Math.floor(apuesta * multiplicador);
          mostrarMoneyPopup(`+$${ganancia}`, true);
          const moneyPopup = document.createElement('div');
          moneyPopup.className = 'money-change';
          moneyPopup.textContent = `+$${ganancia}`;
          moneyPopup.style.left = `${mouseX}px`;
          moneyPopup.style.top = `${mouseY}px`;
          document.body.appendChild(moneyPopup);
          setTimeout(() => moneyPopup.remove(), 1000);
          dinero += ganancia;
          cartas[i].correct = true;
          cartas[i].volteada = true; // Ensure card stays flipped
          
          // Verificar si encontró las dos cartas correctas
          const cartasCorrectasEncontradas = cartas.filter(c => c.volteada && c.correcta).length;
          if (cartasCorrectasEncontradas === NUM_CARTAS_CORRECTAS) {
            // Bono por encontrar ambas cartas
            const bonusGanancia = Math.floor(apuesta * (combo + 1));
            dinero += bonusGanancia;
            mostrarMoneyPopup(`+$${bonusGanancia} ¡BONUS!`, true);
            log(`[BONUS] ¡Has encontrado las dos cartas! Bonus: $${bonusGanancia}`, 'success');
            
            // Llamar a celebrarVictoria después de un breve delay
            setTimeout(() => {
              celebrarVictoria();
            }, 1000);
          }
          
          if (dinero >= 3100) {
            celebrarVictoria();
          }
        } else {
          combo = 0;
          cartas[i].wrong = true;
          cartas[i].volteada = true; // Ensure card stays flipped
          mostrarMoneyPopup(`-$${apuesta}`, false);
          log("[FALLO] Carta incorrecta", 'error');
          document.body.classList.add('reality-break');
          setTimeout(() => {
            cartas.forEach(c => {
              c.wrong = false;
              c.flip(false);
              c.volteada = false;
            });
            document.body.classList.remove('reality-break');
            estado = "esperando";
            if (dinero < 100 && estado === "esperando") {
              log("[GAME OVER] Te quedaste sin dinero suficiente para seguir...", 'error');
              setTimeout(() => gameOver(), 1000);
            }
          }, 1000);
          }
        verificarCartas();
        actualizarHUD();
      }, 500);
      break;
    }
  }
}

function verificarCartas() {
  const cartasVolteadas = cartas.filter(c => c.volteada);
  const cartasCorrectasVolteadas = cartasVolteadas.filter(c => c.correcta).length;
  const cartasIncorrectasVolteadas = cartasVolteadas.filter(c => !c.correcta).length;
  
  // Primera carta
  if (cartasVolteadas.length === 1) {
    const primeraCarta = cartasVolteadas[0];
    if (!primeraCarta.correcta) {
      // Erró la primera carta - pierde 50% de la apuesta
      primeraCarta.wrong = true;
      dinero -= Math.floor(apuestaActual * 0.5);
      log("[PRIMERA CARTA] Incorrecta. Pierdes 50% de la apuesta.", 'error');
      mostrarMoneyPopup(`-$${Math.floor(apuestaActual * 0.5)}`, false);
    } else {
      // Acertó la primera carta
      primeraCarta.correct = true;
      log("[PRIMERA CARTA] ¡Correcta! Continúa con la segunda carta.", 'success');
    }
    estado = "esperandoClick"; // Siempre continuar a la segunda carta
    return;
  }

  // Segunda carta
  if (cartasVolteadas.length === 2) {
    const primeraCarta = cartasVolteadas[0];
    const segundaCarta = cartasVolteadas[1];
    
    if (primeraCarta.correcta && segundaCarta.correcta) {
      // ¡Ambas cartas correctas!
      cartasCorrectasEncontradas += 2;
      segundaCarta.correct = true;
      primeraCarta.correct = true;
      const bonusGanancia = Math.floor(apuestaActual * 1.5);
      dinero += apuestaActual + bonusGanancia;
      combo++;
      log("[VICTORIA] ¡Encontraste ambas cartas! Bonus de 1.5x en la segunda.", 'success');
      mostrarMoneyPopup(`+$${apuestaActual + bonusGanancia}`, true);
      
      // Si encontramos todas las cartas correctas, celebrar victoria
      if (cartasCorrectasEncontradas >= NUM_CARTAS_CORRECTAS) {
        setTimeout(() => {
          celebrarVictoria();
        }, 1000);
      }
    } else if (primeraCarta.correcta) {
      // Primera bien, segunda mal
      cartasCorrectasEncontradas++;
      primeraCarta.correct = true;
      segundaCarta.wrong = true;
      const penalizacionReducida = Math.floor(apuestaActual * 0.25);
      dinero -= penalizacionReducida;
      combo = 0;
      log("[SEGUNDA CARTA] Incorrecta. Pierdes solo 25% de la apuesta.", 'warning');
      mostrarMoneyPopup(`-$${penalizacionReducida}`, false);
    } else if (segundaCarta.correcta) {
      // Primera mal, segunda bien
      cartasCorrectasEncontradas++;
      segundaCarta.correct = true;
      primeraCarta.wrong = true;
      log("[SEGUNDA CARTA] ¡Correcta! Pero ya perdiste 50% por la primera.", 'warning');
    } else {
      // Ambas incorrectas
      primeraCarta.wrong = true;
      segundaCarta.wrong = true;
      dinero -= Math.floor(apuestaActual * 0.5);
      combo = 0;
      log("[DERROTA] Ambas cartas incorrectas. Pierdes el 50% restante.", 'error');
      mostrarMoneyPopup(`-$${Math.floor(apuestaActual * 0.5)}`, false);
    }

    // Mostrar todas las cartas y preparar siguiente ronda
    setTimeout(() => {
      cartas.forEach(c => {
        c.flip(true);
        c.volteada = true;
      });
      
      setTimeout(() => {
        cartas.forEach(c => {
          c.flip(false);
          c.volteada = false;
          c.flipProgress = 0;
          c.targetFlip = 0;
          c.correct = false;
          c.wrong = false;
        });
        estado = "esperando";
        inicializarCartas();
        actualizarHUD();
      }, 1500);
    }, 1000);
  }
}

