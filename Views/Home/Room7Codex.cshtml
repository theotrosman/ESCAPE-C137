    .carta:nth-child(15)::before {
      background: radial-gradient(
        circle at 50% 50%,
        rgba(0, 255, 255, 0.8),
        transparent 40%,
        rgba(0, 255, 255, 0.4) 60%,
        transparent
      );
      animation: quantumResonance 4s infinite;
    }

