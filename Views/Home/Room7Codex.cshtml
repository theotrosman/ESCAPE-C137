    /* Mejoras en el efecto de mezcla */
    .carta.shuffling {
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .carta.shuffling::before {
      opacity: 1;
      background-size: 150%;
      animation: shuffleGlow 0.3s infinite alternate;
