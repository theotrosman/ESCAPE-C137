    float angle = atan(uv.y, uv.x);
    float t = iTime * 0.12;
    float spin = angle + t + sin(t + len * 8.0) * 0.15;

    float band = smoothstep(0.3, 0.7, abs(sin(len * 6.0 - t * 2.0 + spin * 2.0)));

