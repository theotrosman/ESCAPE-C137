                // Mostrar est√°tica por 2 segundos
                tvVideo.src = '/img/video0.mp4';
                tvVideo.load();
                tvVideo.muted = false;
                tvVideo.volume = 1;
                tvVideo.play();
                
                setTimeout(() => {
                    tvVideo.src = `/img/video${canalActual}.mp4`;
                    tvVideo.load();
                    tvVideo.muted = false;
                    tvVideo.volume = 1;
                    tvVideo.play();
