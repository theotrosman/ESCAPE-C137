        // Texto de intro
        const introLines = [
            "[DECODIFICANDO SE√ëAL MULTIVERSAL...]",
            "[‚úî] Canal 137 conectado...",
            "[‚úî] Se√±al de audio restaurada...",
            "",
            "Rick: Morty, despert√°, estamos atrapados en una sala hecha de pel√≠culas.",
            "Morty: ¬øQ-qu√©? ¬øD√≥nde estamos ahora Rick?",
            "Rick: Cada canal muestra un clip real con una frase. La clave est√° en la √∫ltima letra que se dice.",
            "Rick: Vas anotando letra por letra. Despu√©s form√°s una palabra.",
            "Rick: A esa palabra la pas√°s a binario. Regla: A‚ÄìM = 0, N‚ÄìZ = 1.",
            "Rick: Pon√© ese binario abajo. Si es correcto, salimos. Si no... nos quedamos atrapados.",
            "Morty: Rick, tengo miedo...",
            "Rick: Toc√° ESPACIO para empezar.",
            "",
            "[Presion√° ESPACIO para comenzar]"
        ];

        // Funci√≥n para mostrar intro tipo consola (typewriter)
        function mostrarIntro() {
            const text = introLines.join("\n");
            let i = 0;
            introText.textContent = "";
            function typeWriter() {
                if (i < text.length) {
                    introText.textContent += text.charAt(i);
                    i++;
                    setTimeout(typeWriter, 18);
                }
            }
            typeWriter();
        }

        // Funci√≥n para cambiar canal
        function cambiarCanal(nuevoCanal) {
            if (!encendida || cambiandoCanal) return;
            
            cambiandoCanal = true;
            
            // Mostrar est√°tica
            tvVideo.src = '/img/video0.mp4';
            tvVideo.load();
            tvVideo.muted = false;
            tvVideo.volume = 1;
            tvVideo.play();
            
            // Despu√©s de 2 segundos, cambiar al canal
            setTimeout(() => {
                canalActual = nuevoCanal;
                tvVideo.src = `/img/video${canalActual}.mp4`;
                tvVideo.load();
                tvVideo.muted = false;
                tvVideo.volume = 1;
                tvVideo.play();
                display.textContent = `Canal ${canalActual}`;
                cambiandoCanal = false;
            }, 2000);
        }

        // Funci√≥n para encender/apagar TV
        function toggleTV() {
            encendida = !encendida;
            
            if (encendida) {
                display.textContent = `Canal ${canalActual}`;
                // Mostrar est√°tica por 2 segundos
                tvVideo.src = '/img/video0.mp4';
                tvVideo.load();
                tvVideo.muted = false;
                tvVideo.volume = 1;
                tvVideo.play();
                
                setTimeout(() => {
                    tvVideo.src = `/img/video${canalActual}.mp4`;
                    tvVideo.load();
                    tvVideo.muted = false;
                    tvVideo.volume = 1;
                    tvVideo.play();
                }, 2000);
            } else {
                display.textContent = "TV Apagada";
                tvVideo.pause();
                tvVideo.style.opacity = "0.3";
            }
        }

        // Funci√≥n para verificar c√≥digo
